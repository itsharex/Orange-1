# Database Configuration
# 数据库类型: sqlite (默认), mysql, postgres
DB_TYPE=sqlite

# SQLite 配置 (仅 DB_TYPE=sqlite 时有效)
# 数据库路径 (默认: 系统用户配置目录下的 orange.db)
DB_PATH=orange.db

# MySQL/PostgreSQL 配置 (DB_TYPE=mysql 或 postgres 时使用)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=orange

# SSL 连接模式 (postgres)
# disable: 本地开发环境
# require: 云托管数据库 (Nile, Supabase, AWS RDS 等)
DB_SSL_MODE=disable

# 是否自动创建数据库
# true: 本地开发环境，首次连接时自动创建数据库
# false: 云托管数据库，数据库由服务商预先创建
DB_AUTO_CREATE=true

# Data Sync Configuration (Optional)
# 用于数据同步页面的默认云端数据库配置
# 如果启用，页面将自动填充这些信息
# SYNC_DB_TYPE=postgres
# SYNC_DB_HOST=aws-0-ap-northeast-1.pooler.supabase.com
# SYNC_DB_PORT=5432
# SYNC_DB_USER=postgres
# SYNC_DB_PASSWORD=your-password
# SYNC_DB_NAME=postgres
# SYNC_SSL_MODE=require

# JWT Configuration
# JWT 签名密钥 (生产环境务必修改)
JWT_SECRET=orange-secret-key-change-in-production
# Token 有效期 (单位: 小时)
TOKEN_EXPIRY=24

# Logger Configuration
# 是否启用文件日志
LOG_ENABLE=true
# 日志级别: debug, info, warn, error
LOG_LEVEL=debug
# 日志文件路径 (默认: 系统用户配置目录/log/orange.log)
LOG_PATH=orange.log
# 单个日志文件最大大小 (MB)
LOG_MAX_SIZE=10
# 保留旧日志文件的最大个数
LOG_MAX_BACKUPS=5
# 保留旧日志文件的最大天数
LOG_MAX_AGE=30
# 是否压缩旧日志文件
LOG_COMPRESS=true

# GitHub Updates
# 用于检查更新的仓库地址
GITHUB_REPO=FruitsAI/Orange

ENABLE_API_SERVER=true
API_SERVER_PORT=3456
